<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="arm_left" params="base_frame x y z roll pitch yaw">
    <!-- joint 0 -->
    <link name="left_link_0">
    </link>
    <joint name="left_joint_0" type="fixed">
      <parent link="${base_frame}"/>
      <child link="left_link_0"/>
      <origin xyz="${x} ${y} ${z}" rpy="${roll} ${pitch} ${yaw}"/>
    </joint>

    <!-- joint 1 -->
    <link name="left_link_1">
      <visual>
        <geometry>
          <mesh filename="package://wpr2_description/meshes/arm/arm_link_1.dae" scale="1 1 1"/>
        </geometry>
        <origin rpy="${-M_PI*0.5} 0 ${M_PI*0.5}" xyz="0 -0.07 0"/>
      </visual>
      <collision>
        <origin xyz="0.09 0 0" rpy="0 ${M_PI*0.5} 0"/>
        <geometry>
          <cylinder length="0.07" radius="0.041"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.01"/>
      </inertial>
    </link>
    <joint name="left_joint_1" type="continuous">
      <parent link="left_link_0"/>
      <child link="left_link_1"/>
      <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>
    <transmission name="left_joint_1_transmission">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="left_joint_1">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      </joint>  
      <actuator name="left_joint_1_motor">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <!-- joint 2 -->
    <link name="left_link_2">
      <visual>
        <geometry>
          <mesh filename="package://wpr2_description/meshes/arm/arm_link_2.dae" scale="1 1 1"/>
        </geometry>
        <origin rpy="${M_PI} 0 0" xyz="0 0 0"/>
      </visual>
      <collision>
        <origin xyz="0 0.05 0 " rpy="${-M_PI*0.5} 0 0"/>
        <geometry>
          <cylinder length="0.18" radius="0.041"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.01"/>
      </inertial>
    </link>
    <joint name="left_joint_2" type="continuous">
      <parent link="left_link_1"/>
      <child link="left_link_2"/>
      <origin xyz="0 0 0 " rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
    </joint>
    <transmission name="left_joint_2_transmission">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="left_joint_2">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      </joint>  
      <actuator name="left_joint_2_motor">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <!-- joint 3 -->
    <link name="left_link_3">
      <visual>
        <geometry>
          <mesh filename="package://wpr2_description/meshes/arm/arm_link_3.dae" scale="1 1 1"/>
        </geometry>
        <origin xyz="0 0.19 0" rpy="${M_PI*0.5} 0 ${-M_PI*0.5}" />
      </visual>
      <collision>
        <origin xyz="0 0.19 0" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.07" radius="0.041"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.01"/>
      </inertial>
    </link>
    <joint name="left_joint_3" type="continuous">
      <parent link="left_link_2"/>
      <child link="left_link_3"/>
      <origin xyz="0 0 0 " rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>
    <transmission name="left_joint_3_transmission">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="left_joint_3">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      </joint>  
      <actuator name="left_joint_3_motor">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <!-- joint 4 -->
    <link name="left_link_4">
      <visual>
        <geometry>
          <mesh filename="package://wpr2_description/meshes/arm/arm_link_4.dae" scale="1 1 1"/>
        </geometry>
        <origin rpy="${M_PI*0.5} ${M_PI*0.5} 0" xyz="0 0 0.051"/>
      </visual>
      <collision>
        <origin xyz="0 0.09 0" rpy="${M_PI*0.5}  0 0"/>
        <geometry>
          <cylinder length="0.07" radius="0.041"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.01"/>
      </inertial>
    </link>
    <joint name="left_joint_4" type="continuous">
      <parent link="left_link_3"/>
      <child link="left_link_4"/>
      <origin xyz="0 0.19 0" rpy="0 ${M_PI} 0"/>
      <axis xyz="0 0 1"/>
    </joint>
    <transmission name="left_joint_4_transmission">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="left_joint_4">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      </joint>  
      <actuator name="left_joint_4_motor">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <!-- joint 5 -->
    <link name="left_link_5">
      <visual>
        <geometry>
          <mesh filename="package://wpr2_description/meshes/arm/arm_link_5.dae" scale="1 1 1"/>
        </geometry>
        <origin rpy="${-M_PI*0.5} 0 ${-M_PI*0.5}" xyz="0 0 0"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.07" radius="0.041"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.01"/>
      </inertial>
    </link>
    <joint name="left_joint_5" type="continuous">
      <parent link="left_link_4"/>
      <child link="left_link_5"/>
      <origin xyz="0 0.17 0" rpy="0 ${M_PI*0.5} 0"/>
      <axis xyz="0 1 0"/>
    </joint>
    <transmission name="left_joint_5_transmission">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="left_joint_5">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      </joint>  
      <actuator name="left_joint_5_motor">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <!-- joint 6 palm -->
    <link name="left_link_6">
      <visual>
        <geometry>
          <mesh filename="package://wpr2_description/meshes/arm/arm_link_palm.dae" scale="1 1 1"/>
        </geometry>
        <origin rpy="${-M_PI*0.5} ${M_PI*0.5}  0" xyz="0 0 0.05"/>
      </visual>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.01"/>
      </inertial>
    </link>
    <joint name="left_joint_6" type="continuous">
      <parent link="left_link_5"/>
      <child link="left_link_6"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
    </joint>
    <transmission name="left_joint_6_transmission">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="left_joint_6">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      </joint>  
      <actuator name="left_joint_6_motor">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <link name="left_link_finger">
      <visual>
        <geometry>
          <mesh filename="package://wpr2_description/meshes/arm/arm_link_palm.dae" scale="1 1 1"/>
        </geometry>
        <origin rpy="${-M_PI*0.5} ${-M_PI*0.5} 0" xyz="0 0 -0.05"/>
      </visual>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.01"/>
      </inertial>
    </link>
    <joint name="left_joint_finger" type="fixed">
      <parent link="left_link_6"/>
      <child link="left_link_finger"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <!-- finger 0-->
